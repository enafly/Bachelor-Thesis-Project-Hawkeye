<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_border_time">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/bus"
            android:id="@+id/icon"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:id="@+id/linijaPrT"
            android:textColor="@color/colorWhite"
            tools:text="@string/linija" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linijaPr"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <TextView
        android:layout_width="184dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/ImeDolSt1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        tools:text="@string/tekstDo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vrijemeDolSt1"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="184dp"
        android:textSize="20sp"
        android:id="@+id/ImeDolSt2"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        tools:text="@string/tekstOd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vrijemeDolSt2"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

</LinearLayout>