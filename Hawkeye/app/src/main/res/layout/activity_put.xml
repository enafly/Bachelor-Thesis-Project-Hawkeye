<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_put"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hawkeye.ena.ba.hawkeye.activities.PathActivity"
    android:background="@drawable/pozadina">

    <TextView
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/tekstOd"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="42dp"
        android:id="@+id/textOd" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite"
        android:ems="15"
        android:id="@+id/autoCompIOD"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/textOd"
        android:layout_toRightOf="@+id/textDo"
        android:layout_toEndOf="@+id/textDo" />

    <TextView
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompIOD"
        android:text="@string/tekstDo"
        android:layout_alignLeft="@+id/textOd"
        android:layout_alignStart="@+id/textOd"
        android:layout_marginTop="41dp"
        android:id="@+id/textDo" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompIDO"
        android:layout_below="@+id/textDo"
        android:layout_alignLeft="@+id/autoCompIOD"
        android:layout_alignStart="@+id/autoCompIOD"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/buttonDajPut"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/buttonGo" />

</RelativeLayout>
